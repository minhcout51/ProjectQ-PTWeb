@{
    Layout = "~/Views/Shared/AdLayout.cshtml";

}

@model List<ProjectQ.Models.ThongTinDonHang>

<div class="right_col" role="main" style="min-height: 3753px;">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2 style="text-align:center">  Manage Bills List</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">

                    

                    <div class="table-responsive">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings">
                                    <th>
                                        <div class="icheckbox_flat-green" style="position: relative;"><input type="checkbox" id="check-all" class="flat" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>
                                    </th>
                                    <th class="column-title"> Id </th>
                                    <th class="column-title"> Product Id </th>
                                    <th class="column-title"> Name </th>
                                    <th class="column-title"> Type </th>     
                                    <th class="column-title">Price </th>
                                    <th class="column-title">Customer Name</th>
                                    <th class="column-title">Address</th>
                                    <th class="column-title">Store Address </th>
                           
                                    <th class="column-title">Customer Phone Number </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach ( var item in Model)
                                {
                                <tr class="even pointer">
                                    <td class="a-center ">
                                        <div class="icheckbox_flat-green" style="position: relative;">
                                        <input type="checkbox" class="flat" name="table_records" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>
                                    </td>
                                    <td class=" ">@item.Id</td>
                                    <td class=" ">@item.IdSanPham</td>
                                    <td class=" ">@item.TenSanPham</td>
                                    <td class=" ">@item.LoaiSanPham </td>
                                    <td class=" ">@item.Gia </td>
                                    <td class=" ">@item.TenKhachHang </td>
                                    <td class=" ">@item.DiaChi </td>
                                    <td class=" ">@item.DiaChiCuaHang </td>
                                    <td class=" ">@item.SoDienThoaiKhachHang </td>
                                    <td class=" ">
                                        
                                        @Html.ActionLink("Edit","EditBill" ,new {id = item.Id})
                                        @Html.ActionLink("Delete","DeleteBill",new {id = item.Id})
                                        @*@Html.ActionLink("Edit","EditPoduct", new {id = item.LoaiSanPham})
                                        @Html.ActionLink("Edit","EditPoduct", new {id = item.Gia})
                                        
                                        @Html.ActionLink("Edit","EditPoduct", new {id = item.TrangThai})
                                        @Html.ActionLink("Edit","EditPoduct", new {id = item.MoTaSanPham})
                                        @Html.ActionLink("Delete","DeleteProduct", new {id = item.TenSanPham})
                                        @Html.ActionLink("Delete","DeleteProduct", new {id = item.LoaiSanPham})
                                        @Html.ActionLink("Delete","DeleteProduct", new {id = item.Gia})
                                        
                                        @Html.ActionLink("Delete","DeleteProduct", new {id = item.TrangThai})
                                        @Html.ActionLink("Delete","DeleteProduct", new {id = item.MoTaSanPham})
                                        *@
                                    </td>
                                                       
                                </tr>
                         }
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>